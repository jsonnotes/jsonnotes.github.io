{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": ["ESNext", "DOM", "ESNext.BigInt"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": false
  },
  "include": ["src", "../core/src"]
}
